{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es5",
        "baseUrl": "./",
        "outDir": "./dist/out-tsc",
        "rootDir": "src",
        "sourceMap": true,
        "declaration": false,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "moduleResolution": "node",
        "removeComments": true,
        "forceConsistentCasingInFileNames": true,
        "noImplicitThis": true,
        "strictNullChecks": true,
        "alwaysStrict": true,
        "noImplicitAny": true,
        "pretty": true,
        "skipLibCheck": true,
        "lib": ["es2017", "dom"],
        "paths": {
            "*": ["node_modules/*", "src/*"]
        },
        "typeRoots": [
            "node_modules/@types"
        ]
    },
    "exclude": [
        "node_modules",
        ".c9",
        "**/deprecated"
    ],
    "compileOnSave": false,
    "buildOnSave": false
}
